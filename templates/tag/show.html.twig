{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1 class="text-center p-4 mt-3">Tag</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th scope="col">Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tag_index') }}" class="btn btn-secondary mt-2">Voltar para listagem</a>

    <a href="{{ path('tag_edit', {'id': tag.id}) }}"class="btn btn-primary" >Editar</a>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
