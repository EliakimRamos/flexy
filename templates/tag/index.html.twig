{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1 class="text-center p-4 mt-3">Tag index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('tag_show', {'id': tag.id}) }}"class="btn btn-info" >Visualizar</a>
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}"class="btn btn-primary" >Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}"class="btn btn-primary mb-3">Create new</a>


    <script>
       var dataTable = new DataTable("table");
    </script>
{% endblock %}
