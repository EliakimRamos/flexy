{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1 class="text-center p-4 mt-3">Image</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th scope="col">Name</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th scope="col">Path</th>
                <td>
                {{ image.path }}
                 <img class="img-fluid" width="120" src="{{ asset('uploads/' ~ image.path) }}" />
                </td>
            </tr>
            <tr>
                <th scope="col">Title</th>
                <td>
                    {{ image.title }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('image_index') }}" class="btn btn-secondary mt-2">Voltar para listagem</a>

    <a href="{{ path('image_edit', {'id': image.id}) }}"class="btn btn-primary" >Editar</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
